@model Core.Entities.CarEntity

@using (Html.BeginForm("UpdateInformation", "Car"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        <label>Model:</label>
        @Html.EditorFor(model => model.Model, Model.Model, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Model, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Description:</label>
        @Html.EditorFor(model => model.Description, Model.Description, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Brand:</label>
        @Html.EditorFor(model => model.Brand, Model.Brand, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Brand, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Año:</label>
        @Html.EditorFor(model => model.Year, Model.Year.ToString(), new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Precio:</label>
        @Html.EditorFor(model => model.Price, Model.Price.ToString(), new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Kilometraje:</label>
        @Html.EditorFor(model => model.Kilometers, Model.Kilometers.ToString(), new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Kilometers, "", new { @class = "text-danger" })
    </div>
    <button id="sendData" type="submit" value="Guardar" class="btn btn-primary">Guardar</button>
    <a id="cancelButton" class="btn btn-danger" asp-action="List" asp-controller="Car">Cancelar</a>
}
